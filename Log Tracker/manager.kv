<Button>:
    background_normal: ''
    font_size: '28sp'
    font_color: 1, 1, 1, 1
    background_color: 1, 1, 1, 1
    color: 0,0,0,1
    size_hint: 0.15,0.04

<Pop_FloatLayout>:

    Button:
        id: File
        text: 'File'
        font_size: '28sp'
        pos_hint: {'x':0.005, 'top':0.995}
        on_release: dropdownFile.open(self)

    Widget:
        on_parent: dropdownFile.dismiss()

    DropDown:
        id: dropdownFile

        Button:
            text: 'Import'
            size_hint_y: None
            on_release: dropdownFile.dismiss()
            on_release: root.OpenPopup('Import')

        Button:
            text: 'Export'
            size_hint_y: None
            on_release: dropdownFile.dismiss()
            on_release: root.OpenPopup('Export')

        Button:
            text: 'Clean'
            size_hint_y: None
            on_release: dropdownFile.dismiss()
            on_release: root.OpenPopup('Clean')

        Button:
            text: ''
            size_hint_y: None
            height: '180sp'
            on_release: dropdownFile.dismiss()

    Button:
        id: Search
        text:'Search'
        pos_hint: {'x':0.005, 'top':0.954}

    Button:
        id: btn3
        text:'Members'
        pos_hint: {'x':0.005, 'top':0.913}

    Button:
        id: User
        text:'User'
        pos_hint: {'x':0.005, 'top':0.872}
        on_release: dropdownUser.open(self)

    Widget:
        on_parent: dropdownUser.dismiss()

    DropDown:
        id: dropdownUser
        on_select: User.text = '{}'.format(args[1])
        auto_width: False
        width: 200

        Button:
            text: 'Web Profile'
            size_hint_y: None
            on_release: dropdownUser.select('Web Profile')
        Button:
            text: 'Option'
            size_hint_y: None
            on_release: dropdownUser.select('Option')
        Button:
            id : Disconnect
            text: 'Disconnect'
            size_hint_y: None
            on_release: dropdownUser.dismiss()
            on_release: quit()


    Button:
        pos_hint: {'x':0.45, 'y':0.81}
        text: 'enlarge'
        font_size: '20sp'
        size_hint: 0.08,0.04
        on_release: root.OpenPopup('Search')

<SearchPopup>:
    size_hint: 0.9, 0.9
    title: 'Search'
    title_color: 1,1,1,1
    title_align: 'center'
    title_size: '36sp'
    separator_color: 0.3,0.3,0.3,1
    auto_dismiss: False

    FloatLayout:
        Button:
            text: 'Dismiss'
            size_hint: 1, 0.06
            pos_hint: {'x':0, 'y':0.94}
            font_color: 0, 0, 0, 1
            background_color: 1, 0, 0, 1
            color: 0,0,0,1
            on_release: root.dismiss()

<ImportPopup>:
    size_hint: 0.9, 0.9
    title: 'Import a new file'
    title_color: 1,1,1,1
    title_align: 'center'
    title_size: '36sp'
    separator_color: 0.3,0.3,0.3,1
    auto_dismiss: False

    FloatLayout:
        Button:
            text: 'Dismiss'
            size_hint: 1, 0.06
            pos_hint: {'x':0, 'y':0.94}
            font_color: 0, 0, 0, 1
            background_color: 1, 0, 0, 1
            color: 0,0,0,1
            on_release: root.dismiss()

        GridLayout:
            size_hint: 0.9,0.85
            pos_hint: {'x':0.05, 'y':0.11}
            spacing: '10dp'
            rows: 1
            cols: 2

            Label:
                text: 'Replace the current ticket save with a new csv file of your choice. All awaiting ticket will be lost.\n[size=28][b]You should make a save beforehand using export or simply use add.[/size][/b]'
                markup: True
                text_size: self.size
                font_size: '26sp'
                halign: 'center'
                valign: 'middle'


            Label:
                text:'Add the csv(s) selected to the current ticket save.\n[size=28][b]Reccomended[/size][/b]'
                markup: True
                text_size: self.size
                font_size: '26sp'
                halign: 'center'
                valign: 'middle'

        GridLayout:
            size_hint: 0.9,0.06
            pos_hint: {'x':0.05, 'y':0.05}
            spacing: '10dp'
            rows: 1
            cols: 2

            Button:
                text: 'Replace'
                background_normal: ''
                font_size: '20sp'
                font_color: 0, 0, 0, 1
                background_color: 1, 1, 1, 1
                color: 0,0,0,1
                on_release: root.dismiss()


            Button:
                text: 'Add'
                background_normal: ''
                font_size: '20sp'
                font_color: 0, 0, 0, 1
                background_color: 1, 1, 1, 1
                color: 0,0,0,1
                on_release: root.dismiss()

<ExportPopup>:
    size_hint: 0.9, 0.9
    title: 'Export a csv file'
    title_color: 1,1,1,1
    title_align: 'center'
    title_size: '36sp'
    separator_color: 0.3,0.3,0.3,1
    auto_dismiss: False

    FloatLayout:
        Button:
            text: 'Dismiss'
            size_hint: 1, 0.06
            pos_hint: {'x':0, 'y':0.94}
            font_color: 0, 0, 0, 1
            background_color: 1, 0, 0, 1
            color: 0,0,0,1
            on_release: root.dismiss()

        GridLayout:
            size_hint: 0.9,0.85
            pos_hint: {'x':0.05, 'y':0.05}
            spacing: '10dp'
            cols_minimum: {0:200,1:200}
            rows: 8
            cols: 2

            Button:
                text: 'Awaiting_Ticket'
                background_normal: ''
                font_size: '28sp'
                font_color: 0, 0, 0, 1
                background_color: 1, 1, 1, 1
                color: 0,0,0,1
                on_release: root.dismiss()

            Label:
                text: 'All ticket currently waiting to be approved in the Awaiting tab'
                markup: True
                text_size: self.size
                font_size: '18sp'
                halign: 'left'
                valign: 'middle'

            Button:
                text: 'Members'
                background_normal: ''
                font_size: '28sp'
                font_color: 0, 0, 0, 1
                background_color: 1, 1, 1, 1
                color: 0,0,0,1
                on_release: root.dismiss()

            Label:
                text: 'Csv file containing every members name and role'
                markup: True
                text_size: self.size
                font_size: '18sp'
                halign: 'left'
                valign: 'middle'

            Button:
                text: 'Original_Ticket'
                background_normal: ''
                font_size: '28sp'
                font_color: 0, 0, 0, 1
                background_color: 1, 1, 1, 1
                color: 0,0,0,1
                on_release: root.dismiss()

            Label:
                text: 'All ticket that have been created. Every original and/or modify instance should be in this file'
                markup: True
                text_size: self.size
                font_size: '18sp'
                halign: 'left'
                valign: 'middle'

            Button:
                text: 'Search'
                background_normal: ''
                font_size: '28sp'
                font_color: 0, 0, 0, 1
                background_color: 1, 1, 1, 1
                color: 0,0,0,1
                on_release: root.dismiss()

            Label:
                text: 'Your personnal Search.conf as a csv file'
                markup: True
                text_size: self.size
                font_size: '18sp'
                halign: 'left'
                valign: 'middle'

            Button:
                text: 'Ticket_All'
                background_normal: ''
                font_size: '28sp'
                font_color: 0, 0, 0, 1
                background_color: 1, 1, 1, 1
                color: 0,0,0,1
                on_release: root.dismiss()

            Label:
                text: 'All ticket currently active'
                markup: True
                text_size: self.size
                font_size: '18sp'
                halign: 'left'
                valign: 'middle'

            Button:
                text: 'Ticket_Active'
                background_normal: ''
                font_size: '28sp'
                font_color: 0, 0, 0, 1
                background_color: 1, 1, 1, 1
                color: 0,0,0,1
                on_release: root.dismiss()

            Label:
                text: 'All ticket currently in your personnal Active tab'
                markup: True
                text_size: self.size
                font_size: '18sp'
                halign: 'left'
                valign: 'middle'

            GridLayout:
                spacing: '10dp'
                cols_minimum: {0:30,1:160}
                rows: 1
                cols: 2

                Button:
                    text: 'Ok'
                    background_normal: ''
                    font_size: '28sp'
                    font_color: 0, 0, 0, 1
                    background_color: 1, 1, 1, 1
                    color: 0,0,0,1
                    on_release: root.dismiss()

                TextInput:
                    text: '...'
                    font_size: '20sp'
                    scroll_x: 1


            Label:
                text: 'Your Search tab currently accessible. Simply put the name of the tab. You can have more then one, separate them with ;'
                markup: True
                text_size: self.size
                font_size: '18sp'
                halign: 'left'
                valign: 'middle'

<CleanPopup>:
    size_hint: 0.9, 0.9
    title: 'Clean your save from old ticket'
    title_color: 1,1,1,1
    title_align: 'center'
    title_size: '36sp'
    separator_color: 0.3,0.3,0.3,1
    auto_dismiss: False

    FloatLayout:
        Button:
            text: 'Dismiss'
            size_hint: 1, 0.06
            pos_hint: {'x':0, 'y':0.94}
            font_color: 0, 0, 0, 1
            background_color: 1, 0, 0, 1
            color: 0,0,0,1
            on_release: root.dismiss()

        GridLayout:
            size_hint: 0.9,0.85
            pos_hint: {'x':0.05, 'y':0.05}
            spacing: '10dp'
            rows_minimum: {0:100,1:150,3:50}
            rows: 3
            cols: 1

            GridLayout:
                rows: 2
                cols: 3

                CheckBox:
                    id: 'In Progress'
                CheckBox:
                    id: 'Resolve'
                CheckBox:
                    id: 'Close'

                Label:
                    text: 'In Progress'
                    font_size: '24sp'
                    markup: True
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                Label:
                    text: 'Resolve'
                    font_size: '24sp'
                    markup: True
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                Label:
                    text: 'Close'
                    font_size: '24sp'
                    markup: True
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'

            Label:
                text: 'All selected type will be exported into a new csv file and then remove from the current active ticket directory.'
                markup: True
                text_size: self.size
                font_size: '28sp'
                halign: 'center'
                valign: 'middle'

            Button:
                text: 'Clean'
                background_normal: ''
                font_size: '28sp'
                font_color: 0, 0, 0, 1
                background_color: 1, 1, 1, 1
                color: 0,0,0,1
                on_release: root.dismiss()
